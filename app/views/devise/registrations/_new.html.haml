.Signup_wrapper
  .Signup_wrapper__container
    = devise_error_messages!
    .Signup_wrapper__title
      %h1 新規ユーザ登録


    = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|

      .Signup_wrapper__container__field
        %ul.Signup_wrapper__container__field__label
          %li.Signup_wrapper__container__field__label__required_item 必須
          %li.Signup_wrapper__container__field__label__item ユーザ名
        = f.text_field :user_name
        
      .Signup_wrapper__container__field
        %ul.Signup_wrapper__container__field__label
          %li.Signup_wrapper__container__field__label__required_item 必須
          %li.Signup_wrapper__container__field__label__item メールアドレス
        = f.email_field :email

      .Signup_wrapper__container__field
        %ul.Signup_wrapper__container__field__label
          %li.Signup_wrapper__container__field__label__required_item 必須
          %li.Signup_wrapper__container__field__label__item パスワード
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off"
      .Signup_wrapper__container__field
        %ul.Signup_wrapper__container__field__label
          %li.Signup_wrapper__container__field__label__required_item 必須
          %li.Signup_wrapper__container__field__label__item パスワード（確認）
        = f.password_field :password_confirmation, autocomplete: "off"

      .Signup_wrapper__container__field
        .Signup_wrapper__container__field__image
        .Signup_wrapper__container__field__image__image_waku      
          %img.Signup_wrapper__container__field__image__image_waku__image{ src: "/assets/Noimage.png", alt: "logo",id: "img1"  }
          = f.label :profile_image do            
            = f.file_field :profile_image,id:"myfile"          
          <br>
          プロフィール画像
        
        -# = f.file_field :profile_image, autofocus: true, autocomplete: "profile_imgae"

        .Signup_wrapper__container__field__selfintro
          = f.text_field :self_introduction, placeholder:"自己紹介"

      .Signup_wrapper__container__submit
        = f.submit "登録する"          

