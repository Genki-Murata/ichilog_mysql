<div class="contents row">
  <div class="container">
    <div class="Touroku_left">
      <h2>新規ユーザ登録</h2>  
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :ユーザ名 %><br />
          <%= f.text_field :user_name %>
        </div>      

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（2回目） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する" %>
        </div>
      <% end %>
    </div>

    <div class="Touroku_right"> 
        <ul class="Account">
          <li class="Account__btn Account__btn--twitter">
            <%= icon('fab', 'twitter',  class: "Account__btn--icon")%>
            <%= link_to 'Twitterで登録','#' %>                             
          </li>

          <li class="Account__btn Account__btn--google">        
            <%= icon('fab', 'google',  class: "Account__btn--icon")%>          
            <%= link_to 'googleで登録' %>                    
          </li>
        </ul>            
    </div>
</div>