.contents.row
  .container
    .Touroku_left
      %h2 ログイン
      = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|
        .field
          = f.label :メールアドレス
          %br/
          = f.email_field :email, autofocus: true
        .field
          = f.label :パスワード
          %br/
          = f.password_field :password, autocomplete: "off"
        - if devise_mapping.rememberable?
          .field
            = f.label :パスワードを記録する
            %br/
            = f.check_box :remember_me
        .actions
          = f.submit "Log in"
    .Touroku_right
      %ul.Account
        %li.Account__btn.Account__btn--twitter
          = icon('fab', 'twitter',  class: "Account__btn--icon")
          = link_to 'Twitterでログイン','#'
        %li.Account__btn.Account__btn--google
          = icon('fab', 'google',  class: "Account__btn--icon")
          = link_to 'googleでログイン'
